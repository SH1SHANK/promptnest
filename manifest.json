{
  "manifest_version": 3,
  "name": "PromptNest",
  "description": "A professional prompt and chat workflow toolkit for modern LLM platforms.",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "PromptNest"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "background": {
    "service_worker": "background/service_worker.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "sidePanel"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://www.perplexity.ai/*",
    "https://copilot.microsoft.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; style-src 'self'; font-src 'self' data:"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://www.perplexity.ai/*",
        "https://copilot.microsoft.com/*"
      ],
      "js": [
        "libs/jspdf.min.js",
        "utils/platform.js",
        "utils/storage.js",
        "utils/exporter.js",
        "content/scraper.js",
        "content/injector.js",
        "content/toolbar.js",
        "content/content.js"
      ],
      "css": [
        "content/fab.css",
        "content/toolbar.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/fab.css",
        "content/toolbar.css",
        "libs/jspdf.min.js",
        "libs/transformers.min.js",
        "models/*"
      ],
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://www.perplexity.ai/*",
        "https://copilot.microsoft.com/*"
      ]
    }
  ]
}
