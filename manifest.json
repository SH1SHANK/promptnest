{
  "manifest_version": 3,
  "name": "Promptium",
  "short_name": "Promptium",
  "description": "Advanced prompt management and AI workflow extension with semantic search, templates, optimization, and chat export.",
  "version": "0.1.0",
  "icons": {
    "16": "icons/promptium/icon16.png",
    "32": "icons/promptium/icon32.png",
    "48": "icons/promptium/icon48.png",
    "128": "icons/promptium/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/promptium/icon16.png",
      "32": "icons/promptium/icon32.png"
    },
    "default_title": "Promptium"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "background": {
    "service_worker": "background/service_worker.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "sidePanel"
  ],
  "host_permissions": [
    "*://*.chatgpt.com/*",
    "*://*.claude.ai/*",
    "*://gemini.google.com/*",
    "*://*.perplexity.ai/*",
    "*://copilot.microsoft.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; style-src 'self'; font-src 'self' data:"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.chatgpt.com/*",
        "*://*.claude.ai/*",
        "*://gemini.google.com/*",
        "*://*.perplexity.ai/*",
        "*://copilot.microsoft.com/*"
      ],
      "js": [
        "libs/jspdf.min.js",
        "utils/constants.js",
        "utils/dom-helpers.js",
        "utils/tags.js",
        "utils/platform.js",
        "utils/storage.js",
        "utils/exporter.js",
        "utils/templates.js",
        "content/scraper.js",
        "content/injector.js",
        "content/toolbar.js",
        "content/content.js"
      ],
      "css": [
        "content/fab.css",
        "content/toolbar.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "libs/jspdf.min.js",
        "libs/transformers.min.js",
        "models/*"
      ],
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://www.perplexity.ai/*",
        "https://copilot.microsoft.com/*"
      ]
    }
  ]
}
